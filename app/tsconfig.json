{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": [],
    "paths": {
      "@/*": ["./src/*"],
      "@composables/*": ["./src/composables/*"],
    },
  },
  "exclude": [
    "dist",
    "node_modules",
    "public",
  ]
}
